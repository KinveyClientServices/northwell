<page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:drawer="nativescript-telerik-ui/sidedrawer" xmlns:widgets="shared/widgets" xmlns:lv="nativescript-telerik-ui/listview" xmlns:statusbar="nativescript-statusbar" loaded="onPageLoad" >
    <statusbar:StatusBar ios:barStyle="light" />
    <page.actionBar>
        <action-bar title="Found Doctors">
            <navigation-button icon="res://ic_menu" tap="toggleDrawer" ios:visibility="collapsed" />
            <action-bar.actionItems>
                <ios>
                    <!--<action-item icon="res://ic_back" ios.position="left" tap="goBack" />-->
                    <!--<action-item ios.systemIcon="19" ios.position="left" tap="addMe" />-->
                     <NavigationButton text="back" tap="goBack" />
                </ios>
            </action-bar.actionItems>
        </action-bar>
    </page.actionBar>
    <drawer:rad-side-drawer id="drawer">
        <drawer:rad-side-drawer.mainContent>
            <ListView id="listview" items="{{ myItems }}" separatorColor="#000000" itemTap="getDoctor">
                <ListView.itemTemplate>
                    <GridLayout columns="75,*" rows="*">
                        <Label text="&#xe971;" class="icon" row="0" col="0" style="text-align: center; vertical-align: center; color: #fff; font-size: 20; background-color: #f1582c;" />
                        <StackLayout orientation="vertical" textAlignment="right" style.backgroundColor="#A6D3EB" row="0" col="1">
                            <Label text="{{ firstname + ' ' + lastname}}" textAlignment="right" fontAttributes="Bold" />
                            <!--<Label text="{{ InvoiceNumber }}" textAlignment="right" class="h3" />-->
                        </StackLayout>
                    </GridLayout>
                </ListView.itemTemplate>
            </ListView>
            
            <lv:RadListView.footerItemTemplate>
            </lv:RadListView.footerItemTemplate>
        </drawer:rad-side-drawer.mainContent>
        <drawer:rad-side-drawer.drawerContent>
            <widgets:drawer-content />
        </drawer:rad-side-drawer.drawerContent>
    </drawer:rad-side-drawer>
</page>
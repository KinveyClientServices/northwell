<page 
  xmlns="http://schemas.nativescript.org/tns.xsd" 
  xmlns:drawer="nativescript-telerik-ui/sidedrawer" 
  xmlns:widgets="shared/widgets" 
  xmlns:lv="nativescript-telerik-ui/listview" 
  xmlns:statusbar="nativescript-statusbar"
  loaded="pageLoaded">
  <statusbar:StatusBar ios:barStyle="light" />
    <page.actionBar>
        <action-bar title="Offline">
            <navigation-button icon="res://ic_menu" tap="toggleDrawer" ios:visibility="collapsed" />
            <action-bar.actionItems>
                <ios>
                    <action-item icon="res://ic_menu" ios.position="left" tap="toggleDrawer" />
                    <action-item ios.systemIcon="4" ios.position="right" tap="addMe" />
                    <!--<action-item ios.systemIcon="5" ios.position="center" tap="syncMe" />-->
                </ios>
            </action-bar.actionItems>
        </action-bar>
    </page.actionBar>
    <drawer:rad-side-drawer id="drawer">
        <drawer:rad-side-drawer.mainContent>
        <ListView id="listview" items="{{ myItems }}" loaded="contentLoaded" >
                <ListView.itemTemplate>
                    <GridLayout columns="75,*" rows="*">
                        <Label text="&#xe971;" class="icon" row="0" col="0" style="text-align: center; vertical-align: center; color: #fff; font-size: 20; background-color: #00853e;"/>
                    <StackLayout orientation="vertical" textAlignment="right" style.backgroundColor="lightgray" row="0" col="1">
                      
                
                        <Label text="{{ accountname }}" textAlignment="right" fontAttributes="Bold" />
                        <Label text="{{ accountcompany }}" textAlignment="right" class="h3"/>
                    </StackLayout>
                    </GridLayout>
                </ListView.itemTemplate>
                <Button class="btn btn-outline" text="Sync Me" tap="syncMe"/>
            </ListView>   

   
        </drawer:rad-side-drawer.mainContent>
        <drawer:rad-side-drawer.drawerContent>
            <widgets:drawer-content />
        </drawer:rad-side-drawer.drawerContent>
    </drawer:rad-side-drawer>
</page>